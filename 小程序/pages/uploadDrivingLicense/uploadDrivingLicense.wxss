/* pages/uploadDrivingLicense/uploadDrivingLicense.wxss */
.title{
  height: 90rpx;line-height: 90rpx;
  background-color: #99d5f5;
  color: #fff;
  padding: 0 60rpx

}
.upload{
  margin: 40rpx;
  border: 1px dotted #bbbbbb;
}
.chooseNumber{
  margin: 100rpx 40rpx;
  border: 1px solid #bbbbbb;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.uploadImg{
  display: block;
  width: 100%;
  height: 420rpx
}
.uploadTest{
  color: #000;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center
}
.uploadTest2{
   color: #ff7979;
  line-height: 50rpx;
  text-align: center
}
.uploadTest3{
   color: #16a9ff;
  margin-top: 150rpx;
  text-align: center
}
.datePicker{
  flex: 1;
  text-align: right
}
.arrow{
  width: 15rpx;
  height: 37rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  transform: rotate(90deg);
  -ms-transform: rotate(90deg);
  -moz-transform: rotate(90deg);
  -webkit-transform: rotate(90deg);
  -o-transform: rotate(90deg);
}
.tip{
  margin: 0 40rpx;
  font-size: 13px;
  color: #cecece;
  line-height: 40px
}
.saveBt{
  text-align: center;
  margin: 20px 10px;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 15px;
  background-color: #00a0e9;
}
.xiala{
  width: 100rpx;
  height: 50rpx;
  border: 1px solid #00a6ff;
  border-radius: 3px;
  position: absolute;
  right: 450rpx
}
.picker{
  text-align: center;
  color: #00a6ff;
  margin-right: 20rpx;
  height: 50rpx;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}
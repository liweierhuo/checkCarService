/* pages/appointment/appointment.wxss */

.container {
  /* border-top: 3px solid #99d6f5; */
}

.items {
  padding: 0 30rpx;
  color: #000;
}

.face {
  color: #fff;
  font-size: 28rpx;
  background-color: #99d6f5;
  padding: 35rpx 60rpx;
}

.number, .china, .locationWrap {
  height: 115rpx;
  border-bottom: 1px solid #d0d0d0;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between
}

.locationWrap {
  justify-content: space-between;
}

.locationWrap view {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker {
  width: 100rpx;
  height: 55rpx;
  border-right: 1px solid #8bb6de;
  position: relative;
  line-height: 65rpx;
  font-size: 28rpx;
}

.picker1 {
  width: 100%;
  height: 55rpx;
  position: relative;
  line-height: 65rpx;
  font-size: 28rpx;
}
.numberPicker{
  flex: 1;
  margin-right: 20px;
  text-align: right
  
}
.xiala {
  width: 15rpx;
  height: 37rpx;
  position: absolute;
  right: 15rpx;
  top: 20rpx;
  transform: rotate(90deg);
  -ms-transform: rotate(90deg);
  -moz-transform: rotate(90deg);
  -webkit-transform: rotate(90deg);
  -o-transform: rotate(90deg);
}

.numberInput {
  flex: 1;
  margin: 0 10rpx;
  text-align: right
}

.location {
  width: 90rpx;
  height: 35rpx;
}

.chooseTime {
  height: 115rpx;
  border-bottom: 1px solid #d0d0d0;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}

.datePicker {
  flex: 1;
}

.phoneNumber {
  padding: 0 60rpx;
  line-height: 130rpx;
  font-size: 28rpx;
  display: flex;
}

.nextBt {
  width: 470rpx;
  height: 115rpx;
  margin: 60rpx auto;
  color: #fff;
  text-align: center;
  line-height: 115rpx;
  background-color: #1cace1;
  font-size: 28rpx;
  border-radius: 5px;
}
.arrow{
  width: 15rpx;
   transform: rotate(90deg);
  -ms-transform: rotate(90deg);
  -moz-transform: rotate(90deg);
  -webkit-transform: rotate(90deg);
  -o-transform: rotate(90deg);
  margin-right: 15px
}
.arrow_inner{
  width: 15rpx;
   transform: rotate(90deg);
  -ms-transform: rotate(90deg);
  -moz-transform: rotate(90deg);
  -webkit-transform: rotate(90deg);
  -o-transform: rotate(90deg);
  margin-right: 15px
}

.arrow1{
  width: 15rpx;
  margin-right: 15px
}
.timeDayText{
  margin-right: 20rpx;
}
.timeDayView{
  display: flex;
  justify-content:center;
  align-items:Center;
}
.array_text {
  width: 80%;
  align-items: center;
  margin-top: 30rpx;
}